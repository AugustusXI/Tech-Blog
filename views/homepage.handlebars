 <div class="wrapper">
    <header>
        <h1 class="has-text-black px-3 py-3 has-text-weight-bold">TechnoBabble: a tech blog</h1>
        <nav class="navbar mt-2">
            {{#if loggedIn}}
            <button id="logout" class="button is-danger">Logout</button>
            {{else}}
            <a href="/login" class="button is-primary">Login</a>
            <a href="/signup" class="button is-primary">Sign Up</a>
            {{/if}}
        </nav>
    </header>
    {{#if postData}}
{{#each postData as |post|}}
<section class="section is-primary">
  <h1 class="title is-primary">{{post.title}}</h1>
  <h2 class="subtitle">
    {{post.post_content}}
  </h2>
</section>
{{/each}}
{{#else}}
<h6 class="pb-4 has-text-centered is-italic">there are currently no posts</h6>
{{/else}}
{{/if}}
<a href="/api/post" class="button is-primary is-rounded">Create Post</button>
