<section>
  <h2 class="title">Give us your wisdom</h2>

  <form class="new-post">
    <div>
      <label for="post-title">title:</label>
      <input
        id="post-title"
        class="input"
        type="text"
        placeholder="Give us a title"
      />
    </div>
    <div>
      <label for="post-content">content:</label>
      <input
        class="textarea is-large"
        id="post-content"
        name="post-content"
        placeholder="write your thoughts..."
      />
    </div>
    <button type="submit" class="button is-primary is-pulled-right">create post</button>
  </form>
</section>

<script src="/js/post.js"></script>